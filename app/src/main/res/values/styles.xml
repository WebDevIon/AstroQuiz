<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="mainLayout">
        <item name="android:padding">8dp</item>
    </style>
    <style name="TitleStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="enterNameStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:drawableLeft">@drawable/ic_astronaut_icon</item>
        <item name="android:hint">Enter your name here AstroQuizer!</item>
    </style>
    <style name="InfoStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">56dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Question1Style" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableLeft">@drawable/ic_meteor_icon</item>
    </style>

    <style name="QuestionText" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="AnswerTextCheckbox" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="Question2Style" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableLeft">@drawable/ic_moon_icon</item>
    </style>

    <style name="AnswerRadioButton" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Question3Style" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableLeft">@drawable/ic_saturn_icon</item>
    </style>

    <style name="textAnswerStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">42dp</item>
        <item name="android:hint">Type your answer here</item>
    </style>

    <style name="Question4Style" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableLeft">@drawable/ic_sun_icon</item>
    </style>

    <style name="Question5Style" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableLeft">@drawable/ic_ursa_major_icon</item>
    </style>

    <style name="ButtonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">32dp</item>
    </style>

</resources>
